<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.mymovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FavoritesActivity"
            android:label="My favorite movies"
            android:parentActivityName=".MainActivity"
            tools:targetApi="jelly_bean">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:parentActivityName=".MainActivity"
            android:label="Movie details"
            tools:targetApi="jelly_bean" />

        <activity
            android:name=".FavDetailsActivity"
            android:label="Movie details"
            android:parentActivityName=".FavoritesActivity"
            tools:targetApi="jelly_bean" />
        <provider
            android:name="com.example.android.mymovies.Data.MovieProvider"
            android:authorities="com.example.android.mymovies"
            android:exported="false" />

    </application>

</manifest>